<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <modules.general.ui.utils.GUI.RecyclerViewEmptySupport
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/download_small_margin"
        android:layout_marginTop="@dimen/download_small_margin"
        />

    <TextView
        android:id="@+id/txtvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/download_emptylist"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/download_medium_text_size"
        android:visibility="gone" />

</RelativeLayout>

